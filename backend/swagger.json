{
  "openapi": "3.0.0",
  "info": {
    "title": "ACM ICPC USICT Portal API",
    "version": "1.0.0"
  },
  "paths": {
    "/api/health": {
      "get": {
        "summary": "Health check",
        "responses": {
          "200": { "description": "OK" }
        }
      }
    },
    "/api/docs/ui": {
      "get": { "summary": "Swagger UI" }
    },
    "/api/auth/register": {
      "post": {
        "summary": "Register user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "password": { "type": "string" },
                  "role": { "type": "string" }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Created" },
          "422": { "description": "Validation Error" }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "summary": "Login",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "OK" },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/api/profile": {
      "post": {
        "summary": "Create/Update profile (auth)",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": { "schema": { "type": "object" } }
          }
        },
        "responses": { "200": { "description": "OK" } }
      },
      "get": {
        "summary": "Get my profile (auth)",
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/api/tasks": {
      "post": {
        "summary": "Create task (admin)",
        "security": [{ "bearerAuth": [] }],
        "responses": { "201": { "description": "Created" } }
      }
    },
    "/api/tasks/{taskId}/submit": {
      "post": {
        "summary": "Submit task (auth)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "taskId", "in": "path", "required": true }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": { "link": { "type": "string" } }
              }
            }
          }
        },
        "responses": { "201": { "description": "Submitted" } }
      }
    },
    "/api/contests": {
      "post": {
        "summary": "Create contest (admin)",
        "security": [{ "bearerAuth": [] }],
        "responses": { "201": { "description": "Created" } }
      }
    },
    "/api/contests/{id}/results": {},
    "/api/sessions": {
      "get": {
        "summary": "List sessions",
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/api/blogs": {
      "post": {
        "summary": "Create blog (auth)",
        "security": [{ "bearerAuth": [] }],
        "responses": { "201": { "description": "Created" } }
      }
    },
    "/api/ai/chat": {
      "post": {
        "summary": "AI Chat (auth)",
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/api/gamification/leaderboard": {
      "get": {
        "summary": "Leaderboard",
        "parameters": [
          { "name": "period", "in": "query", "schema": { "type": "string" } }
        ],
        "responses": { "200": { "description": "OK" } }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
