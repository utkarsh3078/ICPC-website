generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String              @id @default(cuid())
  email              String              @unique
  password           String
  role               Role                @default(STUDENT)
  approved           Boolean             @default(false)
  createdAt          DateTime            @default(now())
  blogs              Blog[]
  contestSubmissions ContestSubmission[]
  profile            Profile?
  submissions        Submission[]
}

model Profile {
  id      String @id @default(cuid())
  userId  String @unique
  name    String
  branch  String
  year    Int
  contact String
  handles Json?
  user    User   @relation(fields: [userId], references: [id])
}

model Task {
  id          String       @id @default(cuid())
  title       String
  description String
  points      Int          @default(0)
  assignedTo  String?
  dueDate     DateTime?
  createdAt   DateTime     @default(now())
  submissions Submission[]
}

model Submission {
  id        String   @id @default(cuid())
  taskId    String
  userId    String
  link      String
  verified  Boolean  @default(false)
  points    Int      @default(0)
  createdAt DateTime @default(now())
  task      Task     @relation(fields: [taskId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model Contest {
  id          String              @id @default(cuid())
  title       String
  problems    Json?
  timer       Int
  results     Json?
  createdAt   DateTime            @default(now())
  startTime   DateTime
  submissions ContestSubmission[]
}

model Session {
  id        String    @id @default(cuid())
  title     String
  details   String?
  date      DateTime?
  attendees Json?
  summary   String?
  createdAt DateTime  @default(now())
  meetLink  String
}

model Blog {
  id        String   @id @default(cuid())
  authorId  String
  title     String
  content   String
  approved  Boolean  @default(false)
  comments  Json?
  createdAt DateTime @default(now())
  author    User     @relation(fields: [authorId], references: [id])
}

model ContestSubmission {
  id         String   @id @default(cuid())
  contestId  String
  problemIdx Int
  userId     String
  token      String?
  result     Json?
  status     String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  tokens     String[]
  contest    Contest  @relation(fields: [contestId], references: [id])
  user       User     @relation(fields: [userId], references: [id])
}

enum Role {
  STUDENT
  ADMIN
  ALUMNI
}
