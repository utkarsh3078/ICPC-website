generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String              @id @default(cuid())
  email              String              @unique
  password           String
  role               Role                @default(STUDENT)
  approved           Boolean             @default(false)
  createdAt          DateTime            @default(now())
  blogs              Blog[]
  comments           Comment[]
  contestSubmissions ContestSubmission[]
  profile            Profile?
  submissions        Submission[]
}

model Profile {
  id             String  @id @default(cuid())
  userId         String  @unique
  name           String
  branch         String
  year           Int
  contact        String
  handles        Json?
  // Alumni-specific fields (nullable for students)
  graduationYear Int?
  company        String?
  position       String?
  location       String?
  bio            String?
  linkedIn       String?
  user           User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Task {
  id          String       @id @default(cuid())
  title       String
  description String
  points      Int          @default(0)
  assignedTo  Json?        // String[] - null = open to all, array = specific user IDs
  dueDate     DateTime?
  createdAt   DateTime     @default(now())
  submissions Submission[]
}

model Submission {
  id        String           @id @default(cuid())
  taskId    String
  userId    String
  link      String
  status    SubmissionStatus @default(PENDING)
  points    Int              @default(0)
  createdAt DateTime         @default(now())
  task      Task             @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum SubmissionStatus {
  PENDING
  VERIFIED
  REJECTED
}

model Contest {
  id          String              @id @default(cuid())
  title       String
  problems    Json?
  timer       Int
  results     Json?
  createdAt   DateTime            @default(now())
  startTime   DateTime
  submissions ContestSubmission[]
}

model Session {
  id        String    @id @default(cuid())
  title     String
  details   String?
  date      DateTime?
  attendees Json?
  summary   String?
  createdAt DateTime  @default(now())
  meetLink  String
}

model Blog {
  id              String     @id @default(cuid())
  authorId        String
  title           String
  content         String     @db.Text
  tags            String[]
  status          BlogStatus @default(PENDING)
  rejectionReason String?
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  author          User       @relation(fields: [authorId], references: [id], onDelete: Cascade)
  comments        Comment[]
}

enum BlogStatus {
  PENDING
  APPROVED
  REJECTED
}

model Comment {
  id        String   @id @default(cuid())
  blogId    String
  userId    String
  content   String   @db.Text
  isEdited  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  blog      Blog     @relation(fields: [blogId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ContestSubmission {
  id         String   @id @default(cuid())
  contestId  String
  problemIdx Int
  userId     String
  token      String?
  result     Json?
  status     String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  tokens     String[]
  contest    Contest  @relation(fields: [contestId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum Role {
  STUDENT
  ADMIN
  ALUMNI
}

model Announcement {
  id        String   @id @default(cuid())
  title     String
  content   String
  pinned    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
