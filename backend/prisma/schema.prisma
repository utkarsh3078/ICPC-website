generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      Role     @default(STUDENT)
  approved  Boolean  @default(false)
  profile   Profile?
  submissions Submission[]
  blogs       Blog[]
  contestSubmissions ContestSubmission[]
  createdAt DateTime @default(now())
}

model Profile {
  id       String  @id @default(cuid())
  user     User    @relation(fields: [userId], references: [id])
  userId   String  @unique
  name     String
  branch   String
  year     Int
  contact  String
  handles  Json?
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String
  points      Int      @default(0)
  assignedTo  String?
  dueDate     DateTime?
  createdAt   DateTime @default(now())
  submissions Submission[]
}

model Submission {
  id        String   @id @default(cuid())
  task      Task     @relation(fields: [taskId], references: [id])
  taskId    String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  link      String
  verified  Boolean  @default(false)
  points    Int      @default(0)
  createdAt DateTime @default(now())
}

model Contest {
  id        String   @id @default(cuid())
  title     String
  problems  Json?
  timer     Int?
  results   Json?
  createdAt DateTime @default(now())
  submissions ContestSubmission[]
}

model Session {
  id        String   @id @default(cuid())
  title     String
  details   String?
  date      DateTime?
  attendees Json?
  summary   String?
  createdAt DateTime @default(now())
}

model Blog {
  id        String   @id @default(cuid())
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  title     String
  content   String
  approved  Boolean  @default(false)
  comments  Json?
  createdAt DateTime @default(now())
}

model ContestSubmission {
  id         String   @id @default(cuid())
  contest    Contest  @relation(fields: [contestId], references: [id])
  contestId  String
  problemIdx Int
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  token      String?
  result     Json?
  status     String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

enum Role {
  STUDENT
  ADMIN
  ALUMNI
}
